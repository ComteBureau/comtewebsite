{{> menu}}

<div id="intro_wrapper">
    <img src="/public/images/vertical_arrow.svg" id="arrow" width="50">
</div>

{{#if home.colors.about_bg}}
    <section style="background-color: {{home.colors.about_bg}}; color: {{home.colors.about_fg}};" id="about">
{{else}}
    <section class="yellow" id="about">
{{/if}}
    <div>
        <h1>{{home.about.title}}</h1>
        <h2 class="salmon">{{home.about.subtitle}}</h2>
        {{ashtml home.about.description}}
        <a href="#process" class="button salmon" id="btn_process">{{home.about.more_link}}</a>
    </div>
</section>

{{#if home.colors.process_bg}}
    <section style="background-color: {{home.colors.process_bg}}; color: {{home.colors.process_fg}};" id="process">
{{else}}
    <section class="salmon" id="process">
{{/if}}
    <div class="collapsible">
        <ul>
            <li>
                <h2>{{home.about.title_insight}}</h2>
                <img src="/public/images/symbol_03.svg">
                {{ashtml home.about.description_insight}}
            </li>
            <li>
                <h2>{{home.about.title_strategy}}</h2>
                <img src="/public/images/symbol_02.svg">
                {{ashtml home.about.description_strategy}}
            </li>
            <li>
                <h2>{{home.about.title_design}}</h2>
                <img src="/public/images/symbol_01.svg">
                {{ashtml home.about.description_design}}
            </li>
            <li>
                <h2>{{home.about.title_last}}</h2>
                <img src="/public/images/symbol_04.svg">
                {{ashtml home.about.description_last}}
            </li>
        </ul>
        <a href="" class="button white" id="btn_process_close">Go back</a>
    </div>
</section>

{{#if works}}
<section id="works">
    {{#workgrid works}}
        <ul id="worklist">
        {{#each row}}

            {{#if main_photo}}
                {{imagestyle id "li" main_photo}}
                <li class="{{@description}}" id="{{id}}">
            {{else}}
                {{#if background_color}}
                    <li class="{{@description}} {{background_color}}">
                {{else}}
                    <li class="{{@description}} black">
                {{/if}}
            {{/if}}

                <a href="{{link}}" class="shade">
                    <div>
                        <h2>{{title}}</h2>
                        <h3>{{subtitle}}</h3>
                    </div>
                </a>
            </li>
        {{/each}}
        </ul>
    {{/workgrid}}
</section>
{{/if}}

{{#if home.colors.clients_bg}}
    <section style="background-color: {{home.colors.clients_bg}}; color: {{home.colors.clients_fg}};" id="clients">
{{else}}
    <section class="greenish" id="clients">
{{/if}}
    <div>
        <h1>{{home.clients.title}}</h1>
        {{ashtml home.clients.description}}

        {{#if clients}}
        <ul id="logos">
        {{#each clients}}
            <li>
                <picture>
                    <source srcset="{{logo.main}}" media="(min-width: 960px)">
                    <source srcset="{{logo.large}}" media="(min-width: 700px) and (max-width: 960px)">
                    <source srcset="{{logo.medium}}" media="(min-width: 400px) and (max-width: 700px)">
                    <img srcset="{{logo.small}}" alt="{{logo.alt}}">
                </picture>
            </li>
        {{/each}}
        </ul>
        {{/if}}
    </div>
</section>

{{#if home.people.photo}}
    {{imagestyle "people" "section" home.people.photo}}
    <section class="wide" id="people">
{{else}}
    <section class="black" id="people">
{{/if}}
    <div>

        <h1>{{home.people.title}}</h1>
        {{ashtml home.people.description}}
        <p>{{email home.contact.email}}</p>

        <a href="#partners" class="yellow button" id="btn_partners">{{home.people.more_link}}</a>

    </div>
</section>

{{#if home.colors.partners_bg}}
    <section style="background-color: {{home.colors.partners_bg}}; color: {{home.colors.partners_fg}};" class="wide" id="partners">
{{else}}
    <section class="black wide" id="partners">
{{/if}}
    <div class="collapsible">

        {{#if home.people.list}}
        <ul id="peoplelist">
            {{#each home.people.list}}
            <li>
                <h3>{{name}}</h3>
                <img src="{{photo.small}}">
                <span>{{title}}</span>
                <span>{{email email}}</span>
                <span>{{telephone}}</span>
                {{ashtml about}}
            </li>
            {{/each}}
        </ul>
        {{/if}}

        <a href="" class="button black" id="btn_partners_close">Go back</a>
    </div>
</section>

{{#if home.colors.calltoaction_bg}}
    <section style="background-color: {{home.colors.calltoaction_bg}}; color: {{home.colors.calltoaction_fg}};">
{{else}}
    <section class="aubergine">
{{/if}}
    <div>
        {{email
            home.contact.email
            home.company.call_to_action
            class="grey button"}}
        <p>{{home.contact.telephone}}</p>
        {{ashtml home.contact.visiting_address}}

        <ul id="socialmedia">
            <li><a href="https://twitter.com/comtebureau"><img src="/public/images/icon_twitter.svg"></a></li>
            <li><a href="https://www.facebook.com/ComteA"><img src="/public/images/icon_facebook.svg"></a></li>
            <li><a href="https://www.linkedin.com/company/comte-analysebyr-"><img src="/public/images/icon_linkedin.svg"></a></li>
        </ul>

        <p class="finale">{{home.company.the_final}}</p>
    </div>
</section>
