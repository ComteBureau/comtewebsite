<div id="intro_wrapper">
    <canvas id="intro"></canvas>
</div>

{{#if home.about.photo}}
    {{imagestyle "about" home.about.photo}}
    <section id="section_about">
{{else}}
    {{#if home.about.background_color}}
        <section class="color_{{lowercase home.about.background_color}}">
    {{/if}}
{{/if}}
    <div>
        <h1>{{home.about.title}}</h1>
        {{ashtml home.about.description}}
    </div>
</section>

{{#if home.process.photo}}
    {{imagestyle "process" home.process.photo}}
    <section id="section_process">
{{else}}
    {{#if home.process.background_color}}
        <section class="color_{{lowercase home.process.background_color}}">
    {{/if}}
{{/if}}
    <div>
        <h1>{{home.process.title}}</h1>
        {{ashtml home.process.description}}

        {{#if home.process.steps}}
        <ul id="col-4">
            {{#each home.process.steps}}
            <li>
                <img src="{{icon.small}}">
                <h3>{{title}}</h3>
                {{ashtml description}}
            </li>
            {{/each}}
        </ul>
        {{/if}}

    </div>
</section>

{{#if works}}
<section>
    {{workslist works}}
</section>
{{/if}}

{{#if home.clients.photo}}
    {{imagestyle "clients" home.clients.photo}}
    <section id="section_clients">
{{else}}
    {{#if home.clients.background_color}}
        <section class="color_{{lowercase home.clients.background_color}}">
    {{/if}}
{{/if}}
    <div>
        <h1>{{home.clients.title}}</h1>
        {{ashtml home.clients.description}}

        {{#if works}}
        <ul>
        {{#each works}}
            <li>
                <img src="{{logo.small}}">
            </li>
        {{/each}}
        </ul>
        {{/if}}
    </div>
</section>

{{#if home.office.photo}}
    {{imagestyle "office" home.office.photo}}
    <section id="section_office">
{{else}}
    {{#if home.office.background_color}}
        <section class="color_{{lowercase home.office.background_color}}">
    {{/if}}
{{/if}}
    <div>

        <h1>{{home.office.title}}</h1>
        {{ashtml home.office.description}}

    </div>
</section>

{{#if home.people.photo}}
    {{imagestyle "people" home.people.photo}}
    <section id="section_people">
{{else}}
    {{#if home.people.background_color}}
        <section class="color_{{lowercase home.people.background_color}}">
    {{/if}}
{{/if}}
    <div>

        <h1>{{home.people.title}}</h1>
        {{ashtml home.people.description}}

        {{#if home.people.list}}
        <ul id="people">
            {{#each home.people.list}}
            <li>
                <img src="{{photo.small}}">
                <h3>{{name}}</h3>
                <p>{{title}}</p>
                <p>{{email email}}</p>
                <p>{{telephone}}</p>
                {{ashtml about}}
            </li>
            {{/each}}
        </ul>
        {{/if}}

    </div>
</section>

<footer>
    <h1>{{home.company.name}}</h1>
    <span>{{home.company.tagline}}</span>
    <ul>
        <li>{{email home.company.email}}</li>
        <li>{{home.company.telephone}}</li>
        <li>{{ashtml home.company.visiting_address}}</li>
        <li>Latitude: {{home.company.location.latitude}}</li>
        <li>Longitude: {{home.company.location.longitude}}</li>
    </ul>
</footer>
